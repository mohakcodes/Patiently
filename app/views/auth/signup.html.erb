<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md p-8 bg-white rounded-lg shadow-md">
    <h1 class="text-3xl font-bold text-center mb-6">Sign Up</h1>

    <%= form_with(model: User.new, url: auth_signup_path, method: :post, local: true) do |form| %>
      <div>
        <label class="block text-gray-700 font-medium mb-0">Name:</label>
        <%= form.text_field :name, class: "w-full px-4 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none" %>
      </div>
      
      <div>
        <label class="block text-gray-700 font-medium mb-0">Email:</label>
        <%= form.email_field :email, class: "w-full px-4 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none" %>
      </div>
      
      <div>
        <label class="block text-gray-700 font-medium mb-0">Password:</label>
        <%= form.password_field :password, class: "w-full px-4 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none" %>
      </div>

      <div>
        <label class="block text-gray-700 font-medium mb-0">Role:</label>
        <%= form.select :role, options_for_select([['Receptionist', 'receptionist'], ['Doctor', 'doctor']]), {}, class: "w-full px-4 py-2 mb-2 border border-gray-300 rounded-md focus:outline-none" %>
      </div>
      
      <%= form.submit "Sign Up", class: "w-full bg-blue-600 text-black font-bold py-2 px-4 rounded-md hover:bg-blue-700" %>
    <% end %>
    
    <p class="text-center text-gray-600 mt-4">
      Already have an account? <%= link_to 'Login here', auth_login_path, class: "text-blue-500 hover:underline" %>
    </p>
  </div>
</div>